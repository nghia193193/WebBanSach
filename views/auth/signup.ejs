<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <a href="/" style="color: rgb(22, 187, 16)">Home</a>
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">
                                
                                <form action="/signup" class="signup-form" method="post" novalidate>

                                    <div class="mb-md-5 mt-md-4 pb-5">

                                        <h2 class="fw-bold mb-2 text-uppercase">Signup</h2>
                                        <p class="text-50 mb-5">Please enter your email and password!</p>

                                        <div class="form-outline form-white mb-4">
                                            <label class="form-label" for="username">Tên đăng nhập</label>
                                            <br>
                                            <i class="fa-solid fa-user"></i>
                                            <input 
                                                type="text" 
                                                id="username" 
                                                name="username" 
                                                value="<%= oldInput.username %>"
                                                class="form-control form-control-lg <%= validationErrors.find(e => e.path === 'username') ? 'invalid' : '' %> " />
                                            <% if (validationErrors.find(e => e.path === 'username')) {  %>
                                                <label class="invalid" ><%= validationErrors.find(e => e.path === 'username').msg %></label>
                                            <% } %>
                                        </div>

                                        <div class="form-outline form-white mb-4">
                                            <label class="form-label" for="email">Email</label>
                                            <br>
                                            <i class="fa-solid fa-user"></i>
                                            <input type="email" id="email" name="email" value="<%= oldInput.email %>"
                                                class="form-control form-control-lg <%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" />
                                            <% if (validationErrors.find(e => e.path === 'email')) {  %>
                                                <label class="invalid" ><%= validationErrors.find(e => e.path === 'email').msg %></label>
                                            <% } %>
                                        </div>

                                        <div class="form-outline form-white mb-4">
                                            <label class="form-label" for="password">Password</label>
                                            <br>
                                            <i class="fa-solid fa-lock"></i>
                                            <input type="password" id="password" name="password" value="<%= oldInput.password %>"
                                                class="form-control form-control-lg <%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" />
                                            <% if (validationErrors.find(e => e.path === 'password')) {  %>
                                                <label class="invalid" ><%= validationErrors.find(e => e.path === 'password').msg %></label>
                                            <% } %>
                                        </div>

                                        <div class="form-outline form-white mb-4">
                                            <label class="form-label" for="confirmPassword">Confirm password</label>
                                            <br>
                                            <i class="fa-solid fa-lock"></i>
                                            <input type="password" id="confirmPassword" name="confirmPassword" 
                                                value="<%= oldInput.confirmPassword %>"
                                                class="form-control form-control-lg <%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>" />
                                            <% if (validationErrors.find(e => e.path === 'confirmPassword')) {  %>
                                                <label class="invalid" ><%= validationErrors.find(e => e.path === 'confirmPassword').msg %></label>
                                            <% } %>
                                        </div>
                                        
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btncustom btn-outline-light btn-lg px-5"
                                            type="submit">Signup</button>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../includes/end.ejs') %>