<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <a href="/" style="color: rgb(22, 187, 16)">Home</a>
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                  <div class="card" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                      
                      <% if (errMessage) { %>
                        <div class="user-message user-message--error"><%= errMessage %></div>
                      <% } %>
                      <% if (succMessage) { %>
                        <div class="user-message"><%= succMessage %></div>
                      <% } %>
                      <form action="/login" class="login-form" method="post" novalidate>

                        <div class="mb-md-5 mt-md-4 pb-5">
                          
                          <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                          <p class="text-50 mb-5">Please enter your email and password!</p>
            
                          <div class="form-outline form-white mb-4">
                              <label class="form-label" for="email">Email</label>
                              <br>
                              <i class="fa-solid fa-user"></i>
                              <input type="email" id="email" name="email" value="<%= oldInput.email %>" 
                                class="form-control form-control-lg <%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" />
                              <% if (validationErrors.find(e => e.path === 'email')) {  %>
                                <label class="invalid" ><%= validationErrors.find(e => e.path === 'email').msg %></label>
                              <% } %>
                          </div>
            
                          <div class="form-outline form-white mb-4">
                              <label class="form-label" for="password">Password</label>
                              <br>
                              <i class="fa-solid fa-lock"></i>
                              <input type="password" id="password" name="password" value="<%= oldInput.password %>"  
                                class="form-control form-control-lg <%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" />
                              <% if (validationErrors.find(e => e.path === 'password')) {  %>
                                <label class="invalid" ><%= validationErrors.find(e => e.path === 'password').msg %></label>
                              <% } %>
                          </div>
            
                          <p class="small mb-5 pb-lg-2"><a class="text-50" href="/reset">Forgot password?</a></p>
            
                          <button class="btncustom btn-outline-light btn-lg px-5" type="submit" 
                          name="_csrf" value="<%= csrfToken %>">Login</button>
            
                          <div class="d-flex justify-content-center text-center mt-4 pt-1">
                            <a href="#!" class="text"><i class="fab fa-facebook-f fa-lg"></i></a>
                            <a href="#!" class="text"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                            <a href="#!" class="text"><i class="fab fa-google fa-lg"></i></a>
                          </div>
            
                        </div>
            
                        <div>
                          <p class="mb-0">Don't have an account? <a href="/signup" class="text-50 fw-bold">Sign Up</a>
                          </p>
                        </div>

                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </section>
        <%- include('../includes/end.ejs') %>
